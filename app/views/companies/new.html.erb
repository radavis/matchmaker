<%= simple_form_for @company do |f| %>

<%= f.input :name %>
<%= f.input :email %>
<%= f.input :city %>
<%= f.input :state %>
<%= f.input :description %>
<%= f.input :telecommute %>
<%= f.association :industry, label_method: :name, value_method: :id, include_blank: true%>
<%= f.input :size, as: :select, label: 'Company Size', collection: company_sizes, include_blank: 'Select Size' %>
<%= f.input :year_founded %>
<%= f.association :skills, include_blank: false, as: :check_boxes %>
<%= f.submit 'Submit' %>

<% end %>
